# Applications to be run on startup
#exec xrandr --output eDP1 --mode 1920x1080
exec setxkbmap -layout us -option caps:escape
#exec gnome-session
#exec --no-startup-id /usr/lib/gnome-settings-daemon/gnome-settings-daemon
#exec xcompmgr -cfFn
exec compton
exec dropbox
#exec --no-startup-id nm-applet
#exec --no-startup-id xfsettingsd --disable-wm-check 
exec --no-startup-id /usr/bin/xfce4-power-manager
#exec --no-startup-id xfce4-volumed
exec feh --bg-fill --random /usr/share/backgrounds/gnome

# In '~/.config/i3/config':
# use 'exec gnome-session-quit --logout'    : logout dialog
# use 'exec gnome-session-quit --power-off' : shutdown menu
# If you have gnome-screensaver installed and want to use it:
# use 'exec gnome-screensaver-command -l'   : locks the screen

# End Startup Apps }}} 

