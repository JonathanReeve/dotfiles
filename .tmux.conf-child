# Bind to C-a instead of C-b.
set-option -g prefix C-b

# Use screen-like binding for last window.
bind-key C-b last-window

# Send bind-key to nested sessions.
bind-key b send-prefix

# Enable mouse.
set-window-option -g mode-mouse on

# Ring the bell if any background window rang a bell.
set-option -g bell-action any

# Set default termtype. If the rcfile sets $TERM, that overrides this value.
set-option -g default-terminal screen-256color

# Aggressively resize windows to fit the current terminal.
set-window-option -g aggressive-resize on

# Set the index of windows and panes to 1 instead of 0.
set-option -g base-index 1
set-window-option -g pane-base-index 1

# switch windows alt+number
bind-key -n M-1 select-window -t 1
bind-key -n M-2 select-window -t 2
bind-key -n M-3 select-window -t 3
bind-key -n M-4 select-window -t 4
bind-key -n M-5 select-window -t 5
bind-key -n M-6 select-window -t 6
bind-key -n M-7 select-window -t 7
bind-key -n M-8 select-window -t 8
bind-key -n M-9 select-window -t 9

