#set-option -g window-status-current-format "#[fg=black,bg=cyan,noreverse,bold] #I #W "

#status bar:
set -g message-attr bold
set -g message-fg black
set -g message-bg blue
set -g status-justify right
set -g status-bg black
set -g status-fg blue
set -g status-interval 5
set -g status-utf8 on
setw -g window-status-format "#[bg=blue,fg=black] #I #[bg=blue,fg=black] #{pane_current_command} "
setw -g window-status-current-format "#[bg=cyan,fg=black] #I #[bg=blue,fg=black] #{pane_current_command} "
set -g status-justify left
set-option -g status-right '#[bg=blue,fg=black] #H #[default] #[bg=blue,fg=black] %H:%M #[default]' 
set-option -g status-left '' 

# Don't wait for an escape sequence.
set-option -sg escape-time 0

# Increase history limit.
set-option -g history-limit 10000

# Source a local config file if it exists.
if-shell "[ -f ~/.tmux.conf.user ]" 'source ~/.tmux.conf.user'

# vi ALL THE THINGS
set-window-option -g mode-keys vi
bind-key -t vi-copy 'v' begin-selection

# Allow tmux copying to get to the system clipboard, too. 
# source: http://unix.stackexchange.com/questions/131011/use-system-clipboard-in-vi-copy-mode-in-tmux 
#bind -t vi-copy y copy-pipe 'xclip -in -selection clipboard' 

bind -t vi-copy y copy-pipe "xclip"


# When you run "tmux attach", create a session if one does not already exist.
new-session -s "tmux"
