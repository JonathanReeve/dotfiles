foreground =  ${colors.my_foreground}

line-size = 6
line-color = ${colors.my_color4}

border-size = 0
border-color = ${colors.my_color2}

padding-left = 0%
padding-right = 1%

module-margin-left = 1
module-margin-right = 1

font-3 = FontAwesome:fontformat=truetype:size=19;1
font-2 = Terminus:fontformat=truetype:size=19;1
font-1 = Linux Biolinum:fontformat=truetype:size=19;1
font-0 = Input Mono Condensed:fontformat=truetype:size=19;1

modules-left = bspwm xwindow
modules-center = date 
modules-right = org-clock volume backlight filesystem memory battery network

;tray-position = right
;tray-transparent = false
;tray-padding = 9
;tray-offset-y = 0%
;tray-offset-x = 0%
;tray-maxsize = 18
;tray-detached = false
;tray-background = ${colors.my_background}

wm-restack = bspwm

;override-redirect = true

[module/i3]
type = internal/i3

label-unfocused-background = ${colors.my_background}
label-unfocused-foreground = ${colors.my_foreground}

